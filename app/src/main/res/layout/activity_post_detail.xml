<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jennifer.contracker.PostDetailActivity">

    <!--<include layout="@layout/app_bar_layout"-->
    <!--android:id="@+id/post_detail_toolbar">-->

    <!--</include>-->




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/post_detail_toolbar">

            <RelativeLayout
                android:id="@+id/job_detail_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="18dp"

                    android:orientation="vertical"
                    android:id="@+id/linearLayout3">


                    <TextView
                        android:id="@+id/post_detail_job_title"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="8dp"

                        android:text="Job Title"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/post_detail_location"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:text="Location"
                        android:textColor="@color/colorWhite"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/post_detail_category"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:text="Category"
                        android:textColor="@color/colorWhite"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/post_detail_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Description"
                        android:textColor="@color/colorWhite"
                        android:textSize="16dp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_below="@id/job_detail_container"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/post_detail_place_bid_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="8dp"
                    android:text="Place a Bid"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/post_detail_hourly_rate"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Hourly Rate"
                    android:padding="8dp"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/post_detail_estimated_hour"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Estimated Hours"
                    android:padding="8dp"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/post_detail_submit_btn"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/custom_layout_border_color"
                    android:text="Submit Bid"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
