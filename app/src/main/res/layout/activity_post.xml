<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jennifer.contracker.PostActivity">


    <include
        android:id="@+id/post_toolbar"
        layout="@layout/app_bar_layout">

    </include>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="Create Service Posting"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/post_job_tile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:hint="Job Title"
        android:inputType="textMultiLine"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_job_tile"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/post_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_description"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="18dp"
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:hint="Location"
        android:inputType="textMultiLine"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtviewCategory"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/post_location"
        android:layout_below="@+id/post_location"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:hint="Service Category"
        android:inputType="textMultiLine"
        android:textSize="18dp" />

    <Button
        android:id="@+id/post_job_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtviewCategory"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/custom_layout_border_color"
        android:text="Post Job"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp" />

    <Spinner
        android:id="@+id/post_service_category"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/post_location"
        android:layout_alignTop="@+id/txtviewCategory" />


</RelativeLayout>
