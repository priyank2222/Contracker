<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jennifer.contracker.CurrentBidActivity">


    <include
        android:id="@+id/toolbar_service"
        layout="@layout/app_bar_layout"

       >

    </include>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/toolbar_service"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/background_dark"
        android:layout_marginTop="23dp"
        android:text="Choose from Current Services"
        android:textSize="20dp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/service_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="11dp"></android.support.v7.widget.RecyclerView>


</RelativeLayout>
