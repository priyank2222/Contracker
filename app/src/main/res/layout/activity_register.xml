<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jennifer.contracker.LoginActivity">


    <!--<include-->
    <!--android:id="@+id/regiser_toolbar"-->
    <!--layout="@layout/app_bar_layout">-->

    <!--</include>-->

    <TextView
        android:id="@+id/titleRegisterTxt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="Contracker"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorPrimary"
        android:textSize="45dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/createAccountRegisterTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleRegisterTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Create your account"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/emailRegisterTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/createAccountRegisterTxt"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:hint="Email"
        android:inputType="textMultiLine|textEmailAddress"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/passwordRegisterTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailRegisterTxt"
        android:layout_marginLeft="30dp"

        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:hint="Password"
        android:inputType="textMultiLine|textPassword"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/confirmPasswordTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/passwordRegisterTxt"
        android:layout_marginLeft="30dp"

        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textMultiLine|textPassword"
        android:textSize="16dp" />

    <Button
        android:id="@+id/createAccountRegisterBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/confirmPasswordTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/custom_layout_border_color"
        android:text="Create Account"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp" />

</RelativeLayout>