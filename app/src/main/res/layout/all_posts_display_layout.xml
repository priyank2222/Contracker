<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="18dp"
    android:background="@drawable/custom_layout_border_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/all_posts_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user_default" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all_posts_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:text="Username"
                android:textAlignment="viewStart"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/all_posts_experience"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:text="Experience"
                android:textAlignment="viewStart"
                android:textColor="@color/colorWhite"
                android:textSize="14dp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/all_posts_job_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:text="Job Title"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_dark"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/all_posts_location"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:padding="8dp"
        android:text="Location"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/all_posts_category"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:padding="8dp"
        android:text="Category"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/all_posts_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="8dp"
        android:text="Description"
        android:textSize="16dp" />

    <Button
        android:id="@+id/all_posts_delete_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:background="@drawable/custom_layout_border_color"

        android:text="Delete" />

</LinearLayout>